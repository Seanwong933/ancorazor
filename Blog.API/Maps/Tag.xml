      UPDATE Tag
      <Set>
        <IsProperty Prepend="," Property="Name">
          Name = @Name
        </IsProperty>
        <IsProperty Prepend="," Property="CreatedAt">
          CreatedAt = @CreatedAt
        </IsProperty>
        <IsProperty Prepend="," Property="UpdatedAt">
          UpdatedAt = @UpdatedAt
        </IsProperty>
        <IsProperty Prepend="," Property="Remark">
          Remark = @Remark
        </IsProperty>
        <IsProperty Prepend="," Property="IsDeleted">
