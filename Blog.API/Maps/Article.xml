<?xml version="1.0" encoding="utf-8"?>

<SmartSqlMap Scope="Article" xmlns="http://SmartSql.net/schemas/SmartSqlMap.xsd">
  <MultipleResultMaps>
    <MultipleResultMap Id="QueryByPage">
      <Result Index="0" Property="Total" />
      <Result Index="1" Property="List" />
    </MultipleResultMap>
  </MultipleResultMaps>
  <Statements>
    <Statement Id="QueryParams">
      <Where>
        <IsNotEmpty Prepend="And" Property="Id">
          T.Id = @Id
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="Cover">
          T.Cover = @Cover
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="Author">
          T.Author = @Author
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="Title">
          T.Title = @Title
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="Content">
          T.Content = @Content
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="Digest">
          T.Digest = @Digest
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="Alias">
          T.Alias = @Alias
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="ViewCount">
          T.ViewCount = @ViewCount
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="CommentCount">
          T.CommentCount = @CommentCount
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="UpdatedAt">
          T.UpdatedAt = @UpdatedAt
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="CreatedAt">
          T.CreatedAt = @CreatedAt
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="IsDraft">
          T.IsDraft = @IsDraft
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="Remark">
          T.Remark = @Remark
        </IsNotEmpty>
      </Where>
    </Statement>

    <!--新增-->
    <Statement Id="Insert">
      INSERT INTO Article
      (
        Cover,
        Author,
        Title,
        Content,
        Digest,
        Alias,
        ViewCount,
        CommentCount,
        UpdatedAt,
        CreatedAt,
        IsDraft,
        Remark
      )
      VALUES
      (
        @Cover,
        @Author,
        @Title,
        @Content,
        @Digest,
        @Alias,
        default,
        default,
        @UpdatedAt,
        @CreatedAt,
        default,
        @Remark
      )
      ;Select Scope_Identity();
    </Statement>

    <!--更新-->
    <Statement Id="Update">
      UPDATE Article
      <Set>
        <IsNotEmpty Prepend="," Property="Cover">
          Cover = @Cover
        </IsNotEmpty>
        <IsNotEmpty Prepend="," Property="Author">
          Author = @Author
        </IsNotEmpty>
        <IsNotEmpty Prepend="," Property="Title">
          Title = @Title
        </IsNotEmpty>
        <IsNotEmpty Prepend="," Property="Content">
          Content = @Content
        </IsNotEmpty>
        <IsNotEmpty Prepend="," Property="Digest">
          Digest = @Digest
        </IsNotEmpty>
        <IsNotEmpty Prepend="," Property="Alias">
          Alias = @Alias
        </IsNotEmpty>
        <IsNotEmpty Prepend="," Property="ViewCount">
          ViewCount = @ViewCount
        </IsNotEmpty>
        <IsNotEmpty Prepend="," Property="CommentCount">
          CommentCount = @CommentCount
        </IsNotEmpty>
        <IsNotEmpty Prepend="," Property="CreatedAt">
          CreatedAt = @CreatedAt
        </IsNotEmpty>
        <IsNotEmpty Prepend="," Property="UpdatedAt">
          UpdatedAt = @UpdatedAt
        </IsNotEmpty>
        <IsEmpty Prepend="," Property="UpdatedAt">
          UpdatedAt = getdate()
        </IsEmpty>
        <IsNotEmpty Prepend="," Property="IsDraft">
          IsDraft = @IsDraft
        </IsNotEmpty>
        <IsNotEmpty Prepend="," Property="Remark">
          Remark = @Remark
        </IsNotEmpty>
      </Set>
      Where Id=@Id;
    </Statement>

    <!--获取数据列-->
    <Statement Id="Query">
      SELECT
      <IsNotEmpty Prepend="Top" Property="Taken">
        (@Taken)
      </IsNotEmpty>
      T.* From Article T
      <Include RefId="QueryParams" />
      <Switch Prepend="Order By" Property="OrderBy">
        <Default>
          T.Id Desc
        </Default>
      </Switch>
    </Statement>

    <!--获取分页数据-->
    <Statement Id="QueryByPage" MultipleResultMap="QueryByPage">
      <!--Total-->
      Select Count(1) From Article T With(NoLock)
      <Include RefId="QueryParams" />;
      
      <!--List-->
      Select TT.* From (
        Select ROW_NUMBER() Over(
        <Switch Prepend="Order By" Property="OrderBy">
          <Default>T.Id Desc</Default>
        </Switch>
        ) Row_Index,
        T.Author, T.Id, T.Title, T.CreatedAt, T.Digest, T.Alias, T.Cover
      From Article T With(NoLock)
      <Include RefId="QueryParams" />
      ) TT
      Where TT.Row_Index Between (@PageIndex*@PageSize+1) And ((@PageIndex+1)*@PageSize);
    </Statement>

    <!--获取记录数-->
    <Statement Id="GetRecord">
      Select Count(1) From Article T
      <Include RefId="QueryParams" />
    </Statement>

    <!--获取表映射实体-->
    <Statement Id="GetEntity">
      Select Top 1 T.* From Article T With(NoLock)
      <Include RefId="QueryParams" />
    </Statement>

    <!--是否存在该记录-->
    <Statement Id="IsExist">
      Select Count(1) From Article T
      <Include RefId="QueryParams" />
    </Statement>
    
    <!--TRANSACTION: 删除-->
    <Statement Id="Delete">
      <Include RefId="DeleteCategoriesAndTagsOfArticle" />
      Delete From Article
      Where Id = @id;
    </Statement>

    <!--TRANSACTION: 更新文章分类-->
    <Statement Id="SetArticleCategories">
      declare @categoryNames table ([name] nvarchar(30));
      <For Open="insert into @categoryNames values" Close="" Key="T" Separator="," Property="categories">
        (@T)
      </For>;

      <!--insert only not exists in Category table-->
      insert INTO Category
        select name, getdate(), getdate(), null from
          (select name from @categoryNames where name not in (select name from Category)) T;

      <!--rebuild middle-table related data-->
      delete from ArticleCategories where Article = @articleId;
      insert into ArticleCategories select @articleId, Id, getdate() from
        (select id from Category where Name in (select name from @categoryNames)) T;
          
      <!--delete unused categories-->
      <Include RefId="DeleteUnusedCategories" />
    </Statement>

    <!--TRANSACTION: 更新文章标签-->
    <Statement Id="SetArticleTags">
      declare @tagNames table ([name] nvarchar(30));
      <For Open="insert into @tagNames values" Close="" Key="T" Separator="," Property="tags">
        (@T)
      </For>;

      <!--insert only not exists in Tag table--> 
      insert INTO Tag
        select name, getdate(), getdate(), null from
          (select name from @tagNames where name not in (select name from Tag)) T;

      <!--rebuild middle-table related data-->
      delete from ArticleTags where Article = @articleId;
      insert into ArticleTags select @articleId, Id, getdate() from
        (select id from Tag where Name in (select name from @tagNames)) T;

      <!--delete unused tags-->
      <Include RefId="DeleteUnusedTags" />
    </Statement>

    <!--TRANSACTION: 删除指定文章的标签跟分类-->
    <Statement Id="DeleteCategoriesAndTagsOfArticle">
      Delete From ArticleTags Where Article = @id;
      Delete From ArticleCategories Where Article = @id;
      <Include RefId="DeleteUnusedTags" />
      <Include RefId="DeleteUnusedCategories" />
    </Statement>
  
    <!--删除未使用的标签-->
    <Statement Id="DeleteUnusedTags">
      Delete FROM Tag WHERE Id NOT IN (SELECT Tag FROM ArticleTags);
    </Statement>
    
    <!--删除未使用的分类-->
    <Statement Id="DeleteUnusedCategories">
      Delete FROM Category WHERE Id NOT IN (SELECT Category FROM ArticleCategories);
    </Statement>
  </Statements>
</SmartSqlMap>